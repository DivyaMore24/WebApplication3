@model WebApplication3.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3><i class="fas fa-id-badge me-2"></i>Employee Details</h3>
        </div>
        <div class="card-body">
            <dl class="row">

                <dt class="col-sm-4"><i class="fas fa-user"></i> First Name</dt>
                <dd class="col-sm-8">@Model.EmpFirstName</dd>

                <dt class="col-sm-4"><i class="fas fa-user"></i> Last Name</dt>
                <dd class="col-sm-8">@Model.EmpLastName</dd>

                <dt class="col-sm-4"><i class="fas fa-envelope"></i> Email</dt>
                <dd class="col-sm-8">@Model.EmailId</dd>

                <dt class="col-sm-4"><i class="fas fa-calendar"></i> Birth Date</dt>
                <dd class="col-sm-8">@Model.BirthDate?.ToString("dd MMM yyyy")</dd>


                <dt class="col-sm-4"><i class="fas fa-venus-mars"></i> Gender</dt>
                <dd class="col-sm-8">@Model.EmpGender</dd>

                <dt class="col-sm-4"><i class="fas fa-phone"></i> Phone Number</dt>
                <dd class="col-sm-8">@Model.EmpPhoneNumber</dd>

                <dt class="col-sm-4"><i class="fas fa-money-bill-wave"></i> Salary</dt>
                <dd class="col-sm-8">₹@Model.Salary</dd>

                <dt class="col-sm-4"><i class="fas fa-check-circle"></i> Status</dt>
                <dd class="col-sm-8">@(Model.EmpStatus ? "Active" : "Inactive")</dd>

                <dt class="col-sm-4"><i class="fas fa-building"></i> Department</dt>
                <dd class="col-sm-8">@Model.Department?.DeptName</dd>

            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model.EmpId" class="btn btn-warning me-2">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
