@model WebApplication3.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container mt-5">
    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h3><i class="fas fa-trash-alt me-2"></i>Confirm Deletion</h3>
        </div>

        <div class="card-body">
            <p class="text-danger fw-bold"><i class="fas fa-exclamation-triangle"></i> Are you sure you want to delete this employee?</p>

            <dl class="row">
                <dt class="col-sm-4">First Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EmpFirstName)</dd>

                <dt class="col-sm-4">Last Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EmpLastName)</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EmailId)</dd>

                <dt class="col-sm-4">Birth Date</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.BirthDate)</dd>

                <dt class="col-sm-4">Gender</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EmpGender)</dd>

                <dt class="col-sm-4">Phone Number</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EmpPhoneNumber)</dd>

                <dt class="col-sm-4">Salary</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Salary)</dd>

                <dt class="col-sm-4">Status</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EmpStatus)</dd>

                <dt class="col-sm-4">Department</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Department.DeptName)</dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="EmpId" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="fas fa-trash"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </form>
        </div>
    </div>
</div>
