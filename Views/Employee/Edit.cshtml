@model WebApplication3.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-warning text-dark">
            <h3><i class="fas fa-user-edit me-2"></i>Edit Employee</h3>
        </div>

        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="EmpId" />

                <div class="mb-3">
                    <label asp-for="EmpFirstName" class="form-label"><i class="fas fa-user"></i> First Name</label>
                    <input asp-for="EmpFirstName" class="form-control" />
                    <span asp-validation-for="EmpFirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EmpLastName" class="form-label"><i class="fas fa-user"></i> Last Name</label>
                    <input asp-for="EmpLastName" class="form-control" />
                    <span asp-validation-for="EmpLastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EmailId" class="form-label"><i class="fas fa-envelope"></i> Email</label>
                    <input asp-for="EmailId" class="form-control" />
                    <span asp-validation-for="EmailId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BirthDate" class="form-label"><i class="fas fa-calendar"></i> Birth Date</label>
                    <input asp-for="BirthDate" class="form-control" type="date" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EmpGender" class="form-label"><i class="fas fa-venus-mars"></i> Gender</label>
                    <input asp-for="EmpGender" class="form-control" />
                    <span asp-validation-for="EmpGender" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EmpPhoneNumber" class="form-label"><i class="fas fa-phone"></i> Phone Number</label>
                    <input asp-for="EmpPhoneNumber" class="form-control" />
                    <span asp-validation-for="EmpPhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Salary" class="form-label"><i class="fas fa-money-bill-wave"></i> Salary</label>
                    <input asp-for="Salary" class="form-control" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="EmpStatus" />
                    <label class="form-check-label" asp-for="EmpStatus">
                        <i class="fas fa-toggle-on"></i> Active Status
                    </label>
                </div>

                <div class="mb-3">
                    <label asp-for="DeptId" class="form-label"><i class="fas fa-building"></i> Department</label>
                    <select asp-for="DeptId" class="form-select" asp-items="ViewBag.DeptId"></select>
                    <span asp-validation-for="DeptId" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <input type="submit" value="Save Changes" class="btn btn-success me-2" />
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
